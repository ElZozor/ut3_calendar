<resources>
    <declare-styleable name="SearchBar">
        <attr name="backgroundColor" format="color"/>
        <attr name="placeHolder" format="string"/>
    </declare-styleable>

    <declare-styleable name="CourseStatus">
        <attr name="title" format="string"/>
        <attr name="remaining" format="integer"/>
    </declare-styleable>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:colorForeground">@color/foregroundColor</item>
        <item name="calendarColor">@color/colorPrimaryDark</item>
        <item name="calendarFloatingButtonIconColor">@android:color/white</item>
        <item name="calendarFloatingButtonColor">@color/colorAccent</item>
        <item name="mapsFloatingButtonColor">@color/mapsFloatingButtonColor</item>
        <item name="mapsFloatingButtonIconColor">@color/mapsFloatingButtonIconColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="iconTint">@color/textColor</item>
        <item name="android:windowBackground">@color/foregroundColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>


        <item name="chipStyle">@style/Widget.App.Chip</item>

        <item name="android:textViewStyle">@style/MaterialTextViewStyle</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="background">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorOnAccent</item>
    </style>


    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Chip</item>
        <item name="chipIconTint">@color/iconTint</item>
        <item name="chipBackgroundColor">@color/foregroundColor</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="colorOnSurface">@color/textColor</item>
        <item name="chipIconTint">@color/iconTint</item>
        <item name="chipBackgroundColor">@color/foregroundColor</item>
    </style>

    <style name="Widget.App.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconTint">@color/iconTint</item>
        <item name="chipBackgroundColor">@color/foregroundColor</item>
    </style>

    <style name="MaterialTextViewStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="background">@color/colorAccent</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="takePictureStyleDark" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="takePictureStyleLight" parent="CardView">
        <item name="cardBackgroundColor">#DCDCDC</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textColorMedium</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textColorHigh</item>
    </style>

</resources>